{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": [
      "svelte",
      "node",
      "jest"
    ],
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ES2021",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES2021"
    ],
    "paths": {
      "minisearch": ["node_modules/minisearch/src/MiniSearch.ts"] 
    }
  },
  "include": [
    "**/*.ts",
    "src/__tests__/event-bus-tests.mts"
  ]
}